@{
    var title = ViewData["Title"] as string ?? "MetricSystem";
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@title - MetricSystem</title>

  <!-- CSS only (no JS) -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
  <header class="border-bottom">
    <!-- Grid layout: brand | menu | actions  (menu is LEFT) -->
    <nav class="container nav-wrap-3col">
      <a class="navbar-brand fw-semibold text-decoration-none" asp-controller="Home" asp-action="Index">
        MetricSystem
      </a>

      <!-- CSS-only hamburger for small screens -->
      <input type="checkbox" id="nav-toggle" class="nav-toggle" aria-label="Toggle navigation" />
      <label for="nav-toggle" class="nav-toggle-label" aria-hidden="true">
        <span class="fa-solid fa-bars"></span>
      </label>

      <!-- Left-aligned menu -->
      <ul class="nav nav-menu">
        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="nav-item"><a class="nav-link" asp-controller="Conversion" asp-action="Temperature">Fahrenheit</a></li>
        <li class="nav-item"><a class="nav-link" asp-controller="Conversion" asp-action="Inch">Inch</a></li>
        <li class="nav-item"><a class="nav-link" asp-controller="Conversion" asp-action="Pint">Pint</a></li>
        <li class="nav-item"><a class="nav-link" asp-controller="Conversion" asp-action="Yard">Yard</a></li>
        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
      </ul>

      <!-- Right actions -->
      <div class="nav-actions">
        <a class="btn btn-outline-primary btn-sm d-inline-flex align-items-center gap-2" asp-controller="Conversion" asp-action="History">
          <i class="fa-solid fa-calculator"></i>
          <span>Calculations</span>
          <span class="badge text-bg-primary">2</span>
        </a>
      </div>
    </nav>
  </header>

  <main role="main" class="pb-5">
    @RenderBody()
  </main>

  <footer class="border-top">
    <div class="container py-3 text-muted small">
      &copy; @DateTime.Now.Year - MetricSystem
    </div>
  </footer>
</body>
</html>
